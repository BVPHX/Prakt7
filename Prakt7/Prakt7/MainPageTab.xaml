<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prakt7.MainPageTab"
             Style="{StaticResource Key=pageStyle}">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Orange" Padding="24" CornerRadius="0">
                <Label Text="навигация по окнам" HorizontalOptions="Center"></Label>
            </Frame>
            <Button Text="Обычное окно" Clicked="btn_Safepage"></Button>
            <Button Text="Модальное окно" Clicked="btn_ModalPage"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>